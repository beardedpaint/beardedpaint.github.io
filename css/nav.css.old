.nav-bar {
	display: flex;
	position: fixed;
	z-index:1;
	width: 100%;
	justify-content:space-between;
	align-items: center;
	background-color:#333;
	color: white;
	padding:5px;
}
.links-bar {
	display: flex;
	flex-direction:row no-wrap;
	justify-content:center;
	align-items:stretch;
	position: fixed;
	bottom:0;
	z-index:1;
	width: 100%;
	background-color: rgba(45,45,45, 0.8 );
	color: white;
	padding:0px;
	height:40px;
}


.soc-icon {
	adding: auto;
	height:100%;
	width:40px;
	order: 1px solid red;
}
.contact-btn-nav {
	background: #F8FC69;
	color: #333;
	font-weight:bold;
	font-size: 1rem;
	padding:10px;
	border: solid 1px black;
	border-radius: 0.2rem;
	align-self:flex-end;
	margin-right:80px;
	margin-top:auto;
	margin-bottom:auto;
}
.toggle-button {
	position: absolute;
	top: .75rem;
	right: 1rem;
	display: none;
	flex-direction: column;
	justify-content: space-between;
	width: 30px;
	height:21px;
	margin:auto;
}
.toggle-button .bar {
	height: 3px;
	width: 100%;
	background-color: white;
	border-radius: 10px;
}
.nav-bar-links {
	align-self:flex-start;
	margin-left:80px;
}
.nav-bar-links ul {
	display: flex;
	margin: 0px;
	padding: 0px;
}

.nav-bar-links li {
	list-style: none;
}

.nav-bar-links li a {
	text-decoration: none;	
	color: white;
	padding: 1rem;
	display:block;
}

.nav-bar-links li:hover {
	background-color: #555;
}

